{
  "name": "harbinger-backend",
  "version": "0.1.0",
  "description": "The Sqlite Express and Node portion of the SEVN stack. Database operation are handled by TypeORM.",
  "main": "app.ts",
  "scripts": {
    "start": "npx mkdirp ./dist/db && tsc && node --unhandled-rejections=strict ./dist/app.js",
    "debug": "cross-env DEBUG=* npm run start",
    "test": "mocha -r ts-node/register 'test/**/*.test.ts' --unhandled-rejections=strict",
    "test-debug": "cross-env DEBUG=* && npm test",
    "clean-debug": "shx rm ./db/*.sqlite",
    "clean-dist": "shx rm ./dist/db/*.sqlite"
  },
  "author": "Tristan Van Cise",
  "license": "GNU GENERAL PUBLIC LICENSE VERSION 3",
  "dependencies": {
    "app-root-path": "^3.0.0",
    "argon2": "^0.28.2",
    "cors": "^2.8.5",
    "debug": "^4.3.2",
    "express": "^4.17.1",
    "express-validator": "^6.12.0",
    "express-winston": "^4.1.0",
    "reflect-metadata": "^0.1.13",
    "shortid": "^2.2.16",
    "sqlite3": "^5.0.2",
    "typeorm": "^0.2.34",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/chai": "^4.2.21",
    "@types/cors": "^2.8.11",
    "@types/debug": "^4.1.6",
    "@types/express": "^4.17.13",
    "@types/mocha": "^8.2.3",
    "@types/node": "^16.3.1",
    "@types/shortid": "^0.0.29",
    "@types/sqlite3": "^3.1.7",
    "@types/supertest": "^2.0.11",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "mocha": "^9.0.2",
    "shx": "^0.3.3",
    "source-map-support": "^0.5.19",
    "supertest": "^6.1.3",
    "ts-node": "^10.1.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5"
  }
}
